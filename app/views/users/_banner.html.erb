<section class="container-fluid banner">
  <div class="container">
    <div class="row">
      <div class="col-md-auto">
        <%= gravatar_for @user %>
      </div>
      <div class="col">        
        <h1><%= @user.username %></h1>
        <p class="lead">A member since <%= @user.created_at.strftime("%B #{@user.created_at.day.ordinalize}, %Y") %></p>
      </div>
    </div>
  </div>
</section>