<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-1">
        <h5 class="text-center"><%= icon('user') %></h5>
        <h5 class="text-center"><%= icon('id-card-o') %></h5>
        <h5 class="text-center"><%= icon('globe') %></h5>
        <h5 class="text-center"><%= icon('envelope-o') %></h5>
        <h5 class="text-center"><%= icon('clone') %></h5>
        <h5 class="text-center"><%= icon('clock-o') %></h5>
      </div>
      <div class="col col-desc">
        <h5><%= user.username %></h5>
        <% if user.first_name && user.last_name %>
          <h5><%= user.first_name %> <%= user.last_name %></h5>
        <% elsif user.first_name && user.last_name.nil? %>
          <h5><%= user.first_name %>
            <% if session[:user_id] == user.id %>
              <span class="font-italic"><%= link_to '(Add a last name)', edit_user_path %></span>
            <% end %>
          </h5>
        <% elsif user.first_name.nil? && user.last_name %>
          <h5><%= user.last_name %>
            <% if session[:user_id] == user.id %>
              <span class="font-italic"><%= link_to '(Add a first name)', edit_user_path %></span>
            <% end %>
          </h5>
        <% else %>
          <% if session[:user_id] == user.id %>
            <h5 class="font-italic"><%= link_to '(Add a first and last name)', edit_user_path %></h5>
          <% else %>
            <h5 class="font-italic">(This user has not provided a first or last name)</h5>
          <% end %>
        <% end %>
        <% if user.city && user.state %>
          <h5><%= user.city %>, <%= user.state %></h5>
        <% elsif user.city && user.state.nil? %>
          <h5><%= user.city %>
            <% if session[:user_id] == user.id %>
              <span class="font-italic"><%= link_to '(Add a state)', edit_user_path %></span>
            <% end %>
          </h5>
        <% elsif user.city.nil? && user.state %>
          <h5><%= user.state %>
            <% if session[:user_id] == user.id %>
              <span class="font-italic"><%= link_to '(Add a city)', edit_user_path %></span>
            <% end %>
          </h5>
        <% else %>
          <% if session[:user_id] == user.id %>
            <h5 class="font-italic"><%= link_to '(Add a city and state)', edit_user_path %></h5>
          <% else %>
            <h5 class="font-italic">(This user has not provided a city or state)</h5>
          <% end %>
        <% end %>
        <h5><%= user.email %></h5>
        <% if user.admin == true %>
          <h5>Admin User</h5>
        <% else %>
          <h5>Standard User</h5>
        <% end %>
        <div class="row">
          <div class="col">
            <h5>Last logged in on <%= user.logged_in_at.strftime("%A, %B %-d") %> at <%= user.logged_in_at.strftime("%l:%M%p") %></h5>
          </div>
          <div class="col-md-auto">
            <% if session[:user_id] == user.id %>
              <%= link_to icon('pencil')+" Edit", edit_user_path, class: 'btn btn-outline-success', role: 'button' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>