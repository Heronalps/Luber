<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <header>
      <%= render 'layouts/header' %>
    </header>
    <main>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

      <%= yield %>
      
      <%= debug(params) if Rails.env.development? %>
    </main>
    <footer>
      <%= render 'layouts/footer' %>
    </footer>
    <div hidden>
      <%= render 'layouts/scripts' %>
    </div>
  </body>
</html>
