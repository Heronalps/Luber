<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <header>
      <%= render 'layouts/header' %>
    </header>
    <main class="container-fluid" id="<%= controller_name %>-<%= action_name %>">
      <section class="alert-wrapper">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %> fade show mb-0" role="alert">
            <div class="container">
              <div class="row">
                <div class="col">
                  <p class="mb-0"><%= message %></p>
                </div>
                <div class="col-auto">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true"><%= icon('times', class: 'm-0') %></span>
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </section>
      <%= yield %>
    </main>
    <footer>
      <% if User.find_by(id: session[:user_id]) && User.find_by(id: session[:user_id]).admin == true %>
        <%= render 'layouts/debug' %>
      <% end %>
      <%= render 'layouts/footer' %>
    </footer>
  </body>
</html>
