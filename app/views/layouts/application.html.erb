<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <header>
      <%= render 'layouts/header' %>
    </header>
    <main class="container-fluid" id="<%= controller_name %>-<%= action_name %>">
      <% flash.each do |message_type, message| %>
        <section class="alert alert-<%= message_type %>">
          <div class="container">
            <p class="mb-0"><%= message %></p>
          </div>
        </section>
      <% end %>
      <%= yield %>
    </main>
    <footer>
      <% if User.find_by(id: session[:user_id]) && User.find_by(id: session[:user_id]).admin == true %>
        <%= render 'layouts/debug' %>
      <% end %>
      <%= render 'layouts/footer' %>
    </footer>
  </body>
</html>
