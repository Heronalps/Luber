<section class="alert-wrapper">
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %> fade show mb-0" role="alert">
      <div class="container">
        <div class="row">
          <div class="col">
            <p class="alert-message mb-0"><%= message %></p>
          </div>
          <div class="col-auto">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true"><%= icon('times', class: 'm-0') %></span>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>