<section class="header-nav-wrapper">
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/">
        <%= image_tag 'luber-logo.png', class: 'img-fluid', alt: 'Luber' %>
      </a>
      <div class="collapse navbar-collapse" id="navbar-supported-content">
        <%= link_to 'Post a new Rental', new_rental_path, class: 'btn btn-base ml-auto mr-4', role: 'button' %>
        <ul class="navbar-nav">
          <% if signed_in? %>
            <li>
              <%= link_to icon('exchange')+"Rentals", rentals_path, class: 'nav-link' %>
            </li>
            <li>
              <%= link_to icon('user-circle')+session[:user_username], overview_user_path(session[:user_username]), class: 'nav-link' %>
            </li>
            <li>
              <%= link_to icon('sign-out')+"Sign Out", signout_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li>
              <%= link_to icon('user-o')+"Sign Up", signup_path, class: 'nav-link' %>
            </li>
            <li>
              <%= link_to icon('sign-in')+"Sign In", signin_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</section>